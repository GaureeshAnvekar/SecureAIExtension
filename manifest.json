{
  "manifest_version": 3,
  "name": "SecureAI Framework",
  "version": "1.0.0",
  "description": "Framework for overriding browser-based web application features",
  "permissions": [
    "storage",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "https://www.meta.ai/*",
    "https://openrouter.ai/*",
    "https://grok.com/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://www.meta.ai/*",
        "https://openrouter.ai/*",
        "https://grok.com/*"
      ],
      "js": ["dist/loader.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  },
  "web_accessible_resources": [
    {
      "resources": ["configs/*.json", "dist/bundle.js"],
      "matches": ["<all_urls>"]
    }
  ]
}

